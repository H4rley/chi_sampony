<div id="payment" style="display: none;">
	<table class="table table-hover table-striped">
		<thead>
			<tr>
        <th class="col-sm-1">Name</th>
        <th class="col-sm-1">Price</th>
      </tr>
		</thead>
		<tbody>
      <% @payments.each do |pay| %>
        <tr>
          <td>
            <%= f.radio_button :payment_id, pay.id, onClick: "setVisibility('paymentBtn')" %>
            <%= f.label :payment_id, pay.name, value: pay.id %>
          </td>
          <td><%= pay.price %> â‚¬</td>
        </tr>
      <% end %>
		</tbody>
	</table>
  <div class="col-md-1 pull-left">
    <button type="button" class="btn addToCardIcon"
            onclick="renderTab('transport')">Back</button>
  </div>
  <div class="col-md-1 pull-right">
    <button type="button" class="btn addToCardIcon" id="paymentBtn" style="display: none"
            onclick="renderTab('address')">Continue</button>
  </div>
</div>
